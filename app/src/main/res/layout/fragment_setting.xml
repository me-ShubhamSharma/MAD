<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:orientation="vertical"

    tools:context=".HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width = "50dp"
            android:layout_height = "50dp"
            android:layout_marginLeft = "14dp"
            android:layout_marginTop = "12dp"
            android:background = "@drawable/round_back_setting"
            android:padding = "12dp"
            android:src = "@drawable/settings"
            />


        <TextView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:layout_centerInParent = "true"
            android:text = "Settings"
            android:textColor = "@color/white"
            android:textSize = "18sp"
            android:textStyle = "bold"
            />



    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <LinearLayout
                android:background="@drawable/round_back_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="40dp"
                android:orientation="vertical"
                android:padding="15dp">


                <!--                Dark Mode-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/nightmodeicon"
                        android:layout_width="50dp"
                        android:layout_height="60dp"
                        android:background="@drawable/round_back_nightmode"
                        android:padding="12sp"
                        android:src="@drawable/darkmode" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/nightmodeicon"
                        android:text="Night Mode"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:switchMinWidth="50dp"
                        android:theme="@style/nightModeSwitch"/>
                </RelativeLayout>

                <!--                Notifications-->
                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/notificationicon"
                        android:layout_width="50dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/round_back_notifications"
                        android:padding="12sp"
                        android:src="@drawable/notifications" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/notificationicon"
                        android:text="Notifications"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:switchMinWidth="50dp"
                        android:theme="@style/nightModeSwitch"/>
                </RelativeLayout>


            </LinearLayout>
            <LinearLayout
                android:background="@drawable/round_back_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:padding="15dp">
                <!--            logout-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:id="@+id/abouticon"
                        android:layout_width="50dp"
                        android:layout_height="60dp"
                        android:background="@drawable/round_back_about"
                        android:padding="12sp"
                        android:src="@drawable/about_us" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/abouticon"
                        android:text="About"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/round_back_white"
                        android:text=">" />


                    <!--                    <ImageView-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_alignParentEnd="true"-->
                    <!--                        android:layout_centerVertical="true"-->
                    <!--                        android:src="@drawable/right_arrow" />-->
                </RelativeLayout>
                <!--            logout-->
                <RelativeLayout
                    android:id = "@+id/logoutbar"
                    android:layout_width = "match_parent"
                    android:layout_height = "wrap_content"
                    >

                    <ImageView
                        android:id = "@+id/logouticon"
                        android:layout_width = "50dp"
                        android:layout_height = "60dp"
                        android:layout_marginTop = "10dp"
                        android:background = "@drawable/round_logout"
                        android:padding = "12sp"
                        android:src = "@drawable/logout_1"
                        />

                    <TextView
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:layout_centerVertical = "true"
                        android:layout_marginStart = "20dp"
                        android:layout_toEndOf = "@+id/logouticon"
                        android:text = "Logout"
                        android:textColor = "@color/white"
                        android:textStyle = "bold"
                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id = "@+id/logout"
                        android:layout_width = "40dp"
                        android:layout_height = "wrap_content"
                        android:layout_alignParentEnd = "true"
                        android:layout_centerVertical = "true"
                        android:background = "@drawable/round_back_white"
                        android:text = ">"
                        />
                    <!--                    <ImageView-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_alignParentEnd="true"-->
                    <!--                        android:layout_centerVertical="true"-->
                    <!--                        android:src="@drawable/right_arrow" />-->
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>